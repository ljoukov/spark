{
  "name": "@spark/llm",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "lint": "npm run typecheck && npm run eslint",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\"",
    "test": "vitest --run"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@alcyone-labs/zod-to-json-schema": "^4.0.10",
    "@google/genai": "^1.30.0",
    "@spark/schemas": "file:../schemas",
    "execa": "^9.6.0",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^9.15.1",
    "openai": "^6.3.0",
    "sharp": "^0.33.5",
    "undici": "^7.16.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.10.5",
    "eslint": "^9.22.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.22.0",
    "vitest": "^3.2.4"
  }
}
