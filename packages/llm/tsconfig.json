{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "strict": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "types": ["node", "vitest"],
        "composite": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": ["src/**/*", "tests/**/*"]
}
