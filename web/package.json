{
	"name": "web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"dev:https": "vite dev --port 8080",
		"build": "vite build",
		"build:cloudflare": "CF_PAGES=dummy npm run build",
		"build:vercel": "VERCEL=dummy npm run build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint --concurrency auto --ignore-pattern '**/*.svelte' .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"all-tests": "npm run lint && npm run check && npm run test && npm run build",
		"eval:prepare-input": "tsx src/lib/server/llm/eval/offline/prepare-input.ts",
		"eval:run": "tsx src/lib/server/llm/eval/offline/run-eval.ts",
		"eval:audit": "tsx src/lib/server/llm/eval/offline/audit-eval.ts"
	},
