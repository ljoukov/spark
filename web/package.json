{
	"name": "web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "FORCE_TEST_USER=true vite dev --port 3000",
		"dev:https": "vite dev --port 8080",
		"build": "vite build",
		"build:cloudflare": "CF_PAGES=dummy npm run build",
		"build:vercel": "VERCEL=dummy npm run build",
		"build:gcp": "GCP_BUILDPACKS=dummy npm run build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"typecheck": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "npm run typecheck && npm run eslint",
		"eslint": "eslint --concurrency auto --ignore-pattern '**/*.svelte' .",
		"format": "prettier --write .",
		"test": "vitest --run",
		"test:watch": "vitest",
		"all-tests": "npm run lint && npm run test && npm run build"
	},
	"dependencies": {
		"@spark/llm": "file:../packages/llm",
