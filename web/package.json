		"@vitejs/plugin-basic-ssl": "^2.1.0",
		"@vitest/browser": "^3.2.3",
		"bits-ui": "^2.11.0",
		"clsx": "^2.1.1",
		"dotenv": "^16.6.1",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
