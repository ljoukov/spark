{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "gradingPrompt": {
      "type": "string",
      "minLength": 1
    },
    "topic": {
      "type": "string"
    },
    "estimatedMinutes": {
      "type": "integer",
      "exclusiveMinimum": 0,
      "maximum": 9007199254740991
    },
    "progressKey": {
      "type": "string",
      "minLength": 1
    },
    "questions": {
      "minItems": 1,
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "prompt": {
                "type": "string",
                "minLength": 1
              },
              "hint": {
                "type": "string"
              },
              "explanation": {
                "type": "string"
              },
              "audioLabel": {
                "type": "string"
              },
              "correctFeedback": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "minLength": 1
                  },
                  "tone": {
                    "type": "string",
                    "enum": [
                      "info",
                      "success",
                      "warning"
                    ]
                  },
                  "heading": {
                    "type": "string"
                  }
                },
                "required": [
                  "message"
                ],
                "additionalProperties": false
              },
              "kind": {
                "type": "string",
                "const": "multiple-choice"
              },
              "options": {
                "minItems": 2,
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "minLength": 1
                    },
                    "label": {
                      "type": "string",
                      "minLength": 1
                    },
                    "text": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "id",
                    "label",
                    "text"
                  ],
                  "additionalProperties": false
                }
              },
              "correctOptionId": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "id",
              "prompt",
              "correctFeedback",
              "kind",
              "options",
              "correctOptionId"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "prompt": {
                "type": "string",
                "minLength": 1
              },
              "hint": {
                "type": "string"
              },
              "explanation": {
                "type": "string"
              },
              "audioLabel": {
                "type": "string"
              },
              "correctFeedback": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "minLength": 1
                  },
                  "tone": {
                    "type": "string",
                    "enum": [
                      "info",
                      "success",
                      "warning"
                    ]
                  },
                  "heading": {
                    "type": "string"
                  }
                },
                "required": [
                  "message"
                ],
                "additionalProperties": false
              },
              "kind": {
                "type": "string",
                "const": "type-answer"
              },
              "answer": {
                "type": "string",
                "minLength": 1
              },
              "acceptableAnswers": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "placeholder": {
                "type": "string"
              },
              "marks": {
                "type": "integer",
                "minimum": 1,
                "maximum": 20
              },
              "markScheme": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": [
              "id",
              "prompt",
              "correctFeedback",
              "kind",
              "answer",
              "marks",
              "markScheme"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "prompt": {
                "type": "string",
                "minLength": 1
              },
              "hint": {
                "type": "string"
              },
              "explanation": {
                "type": "string"
              },
              "audioLabel": {
                "type": "string"
              },
              "kind": {
                "type": "string",
                "const": "info-card"
              },
              "body": {
                "type": "string",
                "minLength": 1
              },
              "continueLabel": {
                "type": "string"
              },
              "eyebrow": {
                "anyOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            },
            "required": [
              "id",
              "prompt",
              "kind",
              "body"
            ],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": [
    "title",
    "description",
    "gradingPrompt",
    "questions"
  ],
  "additionalProperties": false
}
