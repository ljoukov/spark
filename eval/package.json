{
  "name": "spark-eval",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "quiz:prepare-input": "tsx src/quiz/prepare-input.ts",
    "quiz:eval": "tsx src/quiz/run-eval.ts",
    "quiz:audit": "tsx src/quiz/audit-eval.ts",
    "code:import": "tsx src/code/import-problems.ts",
    "code:download:leetcode": "tsx src/code/download-leetcode.ts",
    "session:generate-audio": "tsx src/code/session/generateTestAudio.ts",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint": "npm run typecheck && npm run eslint",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "test": "vitest --run",
    "session:generate": "FORCE_TEST_USER=true tsx src/code/session/generateTestSession.ts"
  },
  "dependencies": {
    "@spark/llm": "file:../packages/llm",
    "commander": "^14.0.1",
    "firebase-admin": "^13.5.0",
    "@spark/schemas": "file:../packages/schemas"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@google/genai": "^1.21.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.22.0",
    "prettier": "^3.4.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "undici": "^7.16.0",
    "vitest": "^3.2.4",
    "zod": "^4.1.11"
  }
