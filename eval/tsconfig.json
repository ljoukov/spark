{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@spark/llm": ["../packages/llm/src/index.ts"],
			"@spark/llm/*": ["../packages/llm/src/*"],
			"@spark/schemas": ["../packages/schemas/src/index.ts"],
			"@spark/schemas/*": ["../packages/schemas/src/*"]
		}
		},
	"include": ["src/**/*", "tests/**/*"]
}
